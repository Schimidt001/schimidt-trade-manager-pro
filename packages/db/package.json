{
  "name": "@schimidt-brain/db",
  "version": "1.0.0",
  "description": "Persistência institucional — Ledger, Replay, Audit para o Schimidt Brain (PostgreSQL)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src/migrations"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "validate": "tsc --noEmit",
    "migrate": "psql $DATABASE_URL -f src/migrations/0001_init.sql && psql $DATABASE_URL -f src/migrations/0002_indexes.sql"
  },
  "keywords": [
    "schimidt-brain",
    "db",
    "postgres",
    "ledger",
    "replay",
    "audit"
  ],
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/pg": "^8.11.10",
    "typescript": "^5.6.3"
  }
}
